public class Date {
	
	private int day;
	private int month;
	private int year;

	public Date() throws Excepcion1{

		this.setDay=1;
		this.setMonth=1;
		this.setYear=2016;	
	}

	public Date(int dia, int month, int year) throws Excepcion1{
		StringBuffer mens= new String Buffer();

		if (year<0){
			mens.append("El año introducido es incorrecto.");
		} else {
			this.setYear(year);	
		}
		if (mens.length() != 0){
			throw ExcepcionDate(mens.toSring());
		}
	

		if ((month<0) && (month>12){
			mens.append("El mes introducido es incorrecto.");
		} else {
			this.setMonth(month);
		}
		if (mens.length() !=0){
			throw new ExcepcionDate(mens.toString());
		}	


		if ((dia<0) && (dia>31)){
			mens.append("El día es incorrecto.");
		} else {
			this.setDay(day);
		}
		if (mens.length() !=0){
			throw new ExcepcionDate(mens.toString());
		}
	
		if ((month==1) || (month==3) || (month==5) || (month==7) || (month==8) || (month==10) || (month==12)){
			day=<31 && day=>1;
		} else {
			mens.append("El mes intoducido anteriormente no tiene tal día");
		}
		if (mens.length() !=0){
			throw new ExcepcionDate(mens.toString());
		}
	
		if ((month==4) || (month==6) || (month==9) || (month==11)){
			day=<30 && day=>0;
		} else {
			mens.append("Eñ mes introducid anteriormente no tiene tal día.");
		}
		if (mens.length() !=0){
			throw new ExcepcionDate(mens.toString());
		}

		if (month==2){
			day=<28 && day=>0;
		} else {
			mens.append("El mes introducido anteriormente no tiene tal día.");
		}
		if (mens.length() !=0){
			throw new ExcepcionDate(mens.toString());
		}
	
		boolean isSameYear(Date otherDate){
			boolean retorno = false;
			if (this.year == otherDate.getyear());
				retorno = true;
			}
		return retorno;
		}

		boolean isSameYear(Date otherDate){
			boolean retorno = false;
			if (this.month == otherDate.getmonth());
				retorno = true;
			}
		return retorno;
		}

		boolean isSameYear(Date otherDate){
			boolean retorno = false;
			if (this.day == otherDate.getday());
				retorno = true;
			}
		return retorno;
		}
	
		String getMonthName(){
			String monthname= new String();
			switch (month){
			case 1 :
				month.append("Enero");
				break;
			case 2 :
				month.append("Febrero");
				break;
			case 3 :
				month.append("Marzo");
				break;
			case 4 :
				month.append("Abril");
				break;
			case 5 :
				month.append("Mayo");
				break;
			case 6 :
				month.append("Junio");
				break;
			case 7 :
				month.append("Julio");
				break;
			case 8 :
				month.append("Agosto");
				break;
			case 9 :
				month.append("Septiembre");
				break;
			case 10 :
				month.append("Octubre");
				break;
			case 11 :
				month.append("Noviembre");
				break;
			case 12 :
				month.append("Diciembre");
				break;
			return toString();
			}
		}

		Sring getMonthSeason(this.getMonthSeason){
			String seson= new String();
			switch (month){
			case 1 :
				season.append("Invierno");
				break;
			case 2 :
				season.append("Invierno");
				break;
			case 3 :
				season.append("Invierno");
				break;
			case 4 :
				season.append("Primavera");
				break;
			case 5 :
				season.append("Primavera");
				break;
			case 6 :
				season.append("Primavera");
				break;
			case 7 :
				season.append("Verano");
				break;
			case 8 :
				season.append("Verano");
				break;
			case 9 :
				season.append("Verano");
				break;
			case 10 :
				season.append("Otoño");
				break;
			case 11 :
				season.append("Otoño");
				break;
			case 12 :
				season.append("Otoño");
				break;
			return toString();
			}
			



	}
}
